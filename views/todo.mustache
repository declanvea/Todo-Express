<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Todo List</title>
  </head>
  <body>
    <ul>

      <h1> To Do List </h1>
      <form action="/" method="post">
      <input type="text" name="todo" placeholder="Add a todo...">
      <button type="submit">Submit</button>
      </form>
      <input type="checkbox">
      <!-- ${{todo}} -->
      {{#list}}
      <li>
        {{^yetTodo}}
        <form action="/" method="post">
        <button name="complete" value="{{todo}}">Mark Complete</button>
        {{todo}}
        </form>
        <input type="checkbox">
        {{text}}
        {{/yetTodo}}
      </li>
      {{/list}}
    </ul>
    <h2>Completed Tasks:</h2>
    <ul>
      {{#list}}
      <li>
        {{^yetTodo}}
        <input type="checkbox" checked>
        <del>{{text}}</del>
        {{/yetTodo}}
      </li>
      {{/list}}
    </ul>
    <script src="main.js"></script>
  </body>
</html>
